{
  "info": {
    "name": "LinkedIn Analytics Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Signup",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "http://localhost:8000/auth/signup", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth", "signup"]},
        "body": {"mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}"}
      }
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/x-www-form-urlencoded"}],
        "url": {"raw": "http://localhost:8000/auth/login", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth", "login"]},
        "body": {"mode": "urlencoded", "urlencoded": [
          {"key": "username", "value": "admin@example.com"},
          {"key": "password", "value": "admin123"}
        ]}
      }
    },
    {
      "name": "Create Post (scheduled)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:8000/posts/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["posts", ""]},
        "body": {"mode": "raw", "raw": "{\n  \"content\": \"Hello world\",\n  \"scheduled_date\": \"2025-12-31\",\n  \"scheduled_hour\": 10,\n  \"scheduled_minute\": 30\n}"}
      }
    },
    {
      "name": "List My Posts",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:8000/posts/", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["posts", ""]}
      }
    },
    {
      "name": "React to Post",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:8000/analytics/1/react?type=like", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["analytics", "1", "react"], "query": [{"key": "type", "value": "like"}]}
      }
    },
    {
      "name": "Post Metrics",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:8000/analytics/post/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["analytics", "post", "1"]}
      }
    },
    {
      "name": "Top Posts",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "http://localhost:8000/analytics/top?limit=5", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["analytics", "top"], "query": [{"key": "limit", "value": "5"}]}
      }
    }
  ],
  "variable": [
    {"key": "token", "value": ""}
  ]
}
